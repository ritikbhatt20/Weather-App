<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/darkbluebg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        app:srcCompat="@drawable/cloudlogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="Discover the Weather\nin Your City"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get to know your weather maps and"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:fontFamily="@font/armata"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="radar precipitation forecast"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:fontFamily="@font/armata"
        android:layout_marginTop="9dp"/>

    <EditText
        android:id="@+id/et1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Enter your City Name"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textColorHint="@color/black"
        android:layout_marginLeft="20dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:background="@drawable/blue_bg"
        android:layout_marginRight="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/compatButton"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/cornersbg"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/alata"/>

</LinearLayout>